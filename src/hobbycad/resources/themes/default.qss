/* ----- Terminal panel: always dark regardless of platform theme ----- */

QPlainTextEdit#CliPanel {
    background-color: #1e2126;
    color: #cccccc;
    border: none;
    selection-background-color: #3a4250;
    selection-color: #ffffff;
}


/* ----- Reduced viewport: dark placeholder ----- */

QFrame#ReducedViewport {
    background-color: #2d3037;
}


/* ----- Everything else: platform native (no overrides) ----- */

