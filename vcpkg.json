{
  "$comment": "HobbyCAD vcpkg manifest — located at <project-root>/vcpkg.json",
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "hobbycad",
  "version": "0.0.1",
  "description": "A Linux-native, open-source, parametric 3D CAD application",
  "homepage": "https://github.com/ayourk/hobbycad",
  "license": "GPL-3.0-only",
  "dependencies": [
    "opencascade",
    {
      "name": "qtbase",
      "default-features": false,
      "features": ["widgets", "opengl", "gui"]
    },
    "qtsvg",
    "opengl",
    "libzip",
    "libpng",
    "libjpeg-turbo",
    "libgit2"
  ],
  "$overrides-note": "Pinned to Ubuntu 24.04 LTS versions — see docs/dev_environment_setup.txt §6.4",
  "overrides": [
    { "name": "opencascade", "version": "7.6.2" },
    { "name": "qtbase",      "version": "6.4.2" },
    { "name": "qtsvg",       "version": "6.4.2" },
    { "name": "libzip",      "version": "1.7.3" },
    { "name": "libgit2",     "version": "1.8.0" }
  ]
}
